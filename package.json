{
  "name": "jetton-deployer-contracts",
  "description": "Javascript library for deploying Jettons on the TON blockchain",
  "version": "0.0.1",
  "license": "MIT",
  "author": "ton-defi.org",
  "scripts": {
    "prettier": "npx prettier --write '{test,contracts,build}/**/*.{ts,js,json}'",
    "test": "mocha  --exit test/**/*.spec.ts",
    "test:coverage": "nyc mocha --exit test/**/*.spec.ts",
    "test:watch": "mocha --watch --watch-files test/**/*.ts,lib/**/*.ts,contracts/**/*.ts test/**/*.spec.ts",
    "build": "ts-node ./build/_build.ts",
    "deploy": "ts-node ./build/_deploy.ts",
    "deploy:testnet": "ts-node ./build/_deploy.ts",
    "postinstall": "ts-node ./build/_setup.ts"
  },
  "devDependencies": {
    "@swc/core": "^1.2.177",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vercel/ncc": "^0.34.0",
    "axios-request-throttle": "^1.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-bn": "^0.3.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.16.0",
    "fast-glob": "^3.2.11",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prando": "^6.0.1",
    "prettier": "2.6.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ton": "^9.6.3",
    "ton-contract-executor": "^0.4.8",
    "ton-crypto": "^3.1.0",
    "ts-node": "^10.4.0",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "printWidth": 100
  },
  "mocha": {
    "require": [
      "chai",
      "ts-node/register"
    ],
    "timeout": 20000
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@aws-crypto/sha256-js": "^2.0.1",
    "commander": "^9.3.0"
  }
}
